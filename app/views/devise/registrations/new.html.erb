<div class="intro">
  <%= image_tag("intro0", class: "imgintro0", :alt => "first slide")  %>
  <div class="introslogan">
    <p>회원가입</p>
  </div>
</div>

<div class="form-wrap">
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center align-self-center">
      <div class="reg-form" id="navform">
      <h3>회원가입</h3>
	     <%= image_tag("character03", class: "signup_character", :alt => "first slide")  %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="label">
            <!--<i class="fa fa-user" aria-hidden="true"></i> -->
           <div class="row">
             <div class="col-2">
                <%= f.label :이름 %>    
             </div>
          
           <div class="col-10">
              <%= f.text_field :name, class: "form-control", autofocus: true %>
           </div>
            </div>  
          </div>
         
        </div>

        <div class="form-group">
          <div class="label">
            <!--<i class="fa fa-envelope" aria-hidden="true"></i>-->
            <div class="row">
              <div class="col-3">
                <%= f.label :이메일 %>
              </div>
              <div class="col-9">
                <%= f.email_field :email, class: "form-control", autofocus: true %>
              </div>
            </div>
          
          </div>          
          
        </div>

        <div class="form-group">
          <div class="label">
            <!--<i class="fa fa-lock" aria-hidden="true"></i>-->
            <div class="row">
              <div class="col-5">
                <%= f.label :패스워드 %>
                <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>자 이상)</em>
          <% end %>
              </div>
              <div class="col-7">
                 <%= f.password_field :password, class: "form-control",  autocomplete: "off" %>
              </div>
            </div>
          
          
          </div>
         
        </div>

        <div class="form-group">
          <div class="label">
            <!--<i class="fa fa-lock" aria-hidden="true"></i>      -->
            <div class="row">
              <div class="col-4">
                <%= f.label :패스워드_확인 %>       
              </div>
              <div class="col-8">
               <%= f.password_field :password_confirmation, class: "form-control",  autocomplete: "off" %>
              </div>
            </div>
         
          </div>
          </div>

        
          <div class="label">
            <%= f.label :주소 %>   
            <div class="form-group">
             <div class="row">
            <!--<i class="fa fa-home" aria-hidden="true"></i>        -->
            <div class="col-10">
              <span> <%= f.text_field :postcode, class: "form-control postcodify_postcode5", placeholder: "주소를 검색해주세요", autofocus: true, value: "" %>
              </span>
              <span>
              <%= f.text_field :address, class: "form-control postcodify_address", autofocus: true, value: "" %>
              </span>
            </div>
            <div class="col-2">   
               <%= f.button "검색", id: "postcodify_search_button", type: "button" %>
             
            </div>
          
            </div>
            </div>
            
            <div class="form-group">
             
              <%= f.text_field :address_detail, class: "form-control postcodify_details", placeholder: "상세주소를 입력해 주세요",autofocus: true, value: "" %>
            </div>
          </div>            
           
               

        <div class="form-group">
          <div class="label">
            <!--<i class="fa fa-phone" aria-hidden="true"></i>        -->
            <div class="row">
              <div class="col-4">
                  <%= f.label :휴대폰_번호 %>        
              </div>
              <div class="col-8">
                  <%= f.text_field :phone_number, class: "form-control", placeholder: "휴대폰 번호", autofocus: true %>
              </div>
            </div>
        
          </div>
        
        </div>

        <div class="form-group">
          <div class="label">
            <!--<i class="fa fa-birthday-cake" aria-hidden="true"></i>-->
            <div class="row">
              <div class="col-4">
                <%= f.label :생년월일 %>
              </div>
              <div class="col-8">
                <%= f.date_field :birth_date, class: "form-control", autofocus: true %>       
              </div>
            </div>
          
          </div>
         
        </div>
        
        <%= f.radio_button(:role, "일반고객") %>
        <%= f.label(:role_일반고객, "일반고객") %>
        <%= f.radio_button(:role, "수의사") %>
        <%= f.label(:role_수의사, "수의사") %>
        <div class="actions">
          <%= f.submit "가입하기", class: "btn btn-success submitbtn" %>
        </div>

      <% end %>
    </div>
    </div>
  </div>
</div>
</div>
<script src="//d1p7wdleee1q2z.cloudfront.net/post/search.min.js"></script>
<script>
  $(function() { $("#postcodify_search_button").postcodifyPopUp(); });
</script>